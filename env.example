# ===========================================
# VIVIR FELIZ - THERAPY CENTER MANAGEMENT
# Environment Configuration Template
# ===========================================

# ========== DATABASE CONFIGURATION ==========
# PostgreSQL Database Connection
# Replace with your actual database credentials
DATABASE_URL="postgresql://username:password@localhost:5432/vivir_feliz_db?schema=public"
DIRECT_URL="postgresql://username:password@localhost:5432/vivir_feliz_db?schema=public"

# For Supabase (recommended for production)
# DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres?schema=public"
# DIRECT_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres?schema=public"

# ========== SUPABASE CONFIGURATION ==========
# Supabase Project Configuration
NEXT_PUBLIC_SUPABASE_URL="https://[YOUR-PROJECT-REF].supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="[YOUR-ANON-KEY]"
SUPABASE_SERVICE_ROLE_KEY="[YOUR-SERVICE-ROLE-KEY]"

# ========== AUTHENTICATION ==========
# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="[YOUR-NEXTAUTH-SECRET]"

# ========== EMAIL CONFIGURATION ==========
# Resend API for email notifications
RESEND_API_KEY="[YOUR-RESEND-API-KEY]"
FROM_EMAIL="noreply@vivirfeliz.com"

# ========== FILE STORAGE ==========
# Supabase Storage for file uploads
SUPABASE_STORAGE_BUCKET="therapy-documents"

# ========== APPLICATION SETTINGS ==========
# Application Environment
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="Vivir Feliz"

# ========== THERAPY CENTER CONFIGURATION ==========
# Default consultation pricing (in USD)
DEFAULT_CONSULTATION_PRICE="100.00"
DEFAULT_INTERVIEW_PRICE="0.00"

# Session duration settings (in minutes)
DEFAULT_CONSULTATION_DURATION="60"
DEFAULT_INTERVIEW_DURATION="45"
DEFAULT_THERAPY_SESSION_DURATION="45"

# Payment settings
DEFAULT_CURRENCY="USD"
PAYMENT_TIMEOUT_HOURS="24"

# ========== SECURITY SETTINGS ==========
# Rate limiting
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_WINDOW_MS="900000" # 15 minutes

# Session settings
SESSION_TIMEOUT_HOURS="24"
MAX_LOGIN_ATTEMPTS="5"

# ========== MONITORING & LOGGING ==========
# Logging level (error, warn, info, debug)
LOG_LEVEL="info"

# Audit logging
ENABLE_AUDIT_LOGGING="true"
AUDIT_LOG_RETENTION_DAYS="365"

# ========== DEVELOPMENT SETTINGS ==========
# Enable debug mode
DEBUG="false"

# Enable Prisma query logging
PRISMA_QUERY_LOG="false"

# ========== PRODUCTION SETTINGS ==========
# SSL/TLS Configuration
FORCE_HTTPS="false"

# CORS settings
CORS_ORIGIN="http://localhost:3000"

# ========== BACKUP & RECOVERY ==========
# Database backup settings
BACKUP_ENABLED="true"
BACKUP_SCHEDULE="0 2 * * *" # Daily at 2 AM
BACKUP_RETENTION_DAYS="30"

# ===========================================
# INSTRUCTIONS:
# 1. Copy this file to .env
# 2. Replace all [YOUR-*] placeholders with actual values
# 3. Update database credentials
# 4. Configure Supabase project settings
# 5. Set up email service (Resend)
# 6. Adjust application settings as needed
# ===========================================


